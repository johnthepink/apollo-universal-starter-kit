type UserSubscription {
    active: Boolean!
    errors: [FieldError!]
}

extend type Query {
    # Get current user's subscription
    subscription: UserSubscription
}

extend type Mutation {
    # Subscribe a user
    subscribe(input: SubscribeInput!): UserSubscription!
}

input SubscribeInput {
    nameOnCard: String!
    cardNumber: String!
    cvv: String!
    expiryMonth: String!
    expiryYear: String!
}

extend type Subscription {
}
